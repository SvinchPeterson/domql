{
  "private": true,
  "repository": "https://github.com/domql/domql",
  "scripts": {
    "postinstall": "yarn link:packages && yarn build:packages",
    "build": "yarn build:packages",
    "build:watch": "nodemon --exec \"yarn build:cjs\" --ignore 'dist/*'",
    "build:packages": "lerna run build",
    "link:packages": "npx lerna link --force-local",
    "test:watch": "jest 'packages/**/*.js' --watch --env=jsdom",
    "test:unit": "jest 'packages/**/*.js' --env=jsdom",
    "test:lint": "npx standard \"packages/**/*.js\"",
    "test:build": "echo test how it builds is not yet supported",
    "test:coverage": "yarn jest --coverage --coverageReporters=text-lcov | coveralls",
    "test": "yarn jest --coverage --coverageReporters=text-lcov | coveralls",
    "clean": "rm -rf dist .cache **/dist **/.cache",
    "clean:modules": "rm -rf node_modules yarn.lock package-lock.json lerna-debug.log yarn-error.log",
    "clean:packages": "lerna exec -- rm -rf dist node_modules yarn.lock yarn-error.log",
    "clean:all": "yarn clean && yarn clean:modules && yarn clean:packages",
    "reinstall": "yarn clean:all && yarn"
  },
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@babel/eslint-parser": "^7.16.3",
    "@babel/preset-env": "^7.16.4",
    "babel-jest": "^29.2.1",
    "esbuild": "^0.17.11",
    "eslint": "^8.4.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jest": "^27.1.3",
    "eslint-plugin-node": "^11.1.0",
    "jest": "^29.0.2",
    "jsdom": "^21.0.0",
    "lerna": "^6.0.1",
    "nodemon": "^2.0.6",
    "rimraf": "^4.3.1",
    "standard": "^16.0.1"
  },
  "standard": {
    "parser": "@babel/eslint-parser",
    "env": [
      "jest"
    ]
  },
  "babel": {},
  "browserslist": "> 0.25%, not dead",
  "dependencies": {},
  "version": "0.0.5"
}
